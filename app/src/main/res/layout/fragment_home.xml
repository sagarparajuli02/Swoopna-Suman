<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.sagar.swoopnasuman.HomeFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:civ_border_width="2dp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        app:civ_border_color="#FF000000"
        android:src="@drawable/ss2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="23dp"
        android:textColor="#000"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:text="Swoopna Suman"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:text="Date of Birth :	1995 2nd December"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:text="Zodiac : Aquarious"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:text="Birthplace : Kathmandu Nepal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="7dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/facebook"
           android:src="@drawable/ic_facebook"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="7dp"
            android:id="@+id/instagram"
            android:src="@drawable/instagram"

            />
        <ImageView
            android:layout_width="50dp"
            android:layout_margin="7dp"
            android:id="@+id/youtube"
            android:layout_height="50dp"
            android:src="@drawable/youtube"
            />
    </LinearLayout>
</LinearLayout>
